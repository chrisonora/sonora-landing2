{
  "fpsLimit": 60,
  "fullScreen": {
    "zIndex": -1
  },
  "particles": {
    "number": {
      "value": 0,
      "density": {
        "enable": true,
        "area": 800
      }
    },
    "color": {
      "value": "#ffffff"
    },
    "shape": {
      "type": "circle"
    },
    "opacity": {
      "value": 0.5
    },
    "size": {
      "value": { "min": 10, "max": 50 },
      "animation": {
        "count": 1,
        "enable": true,
        "speed": 10,
        "sync": true,
        "startValue": "min"
      }
    },
    "move": {
      "enable": true,
      "speed": { "min": 3, "max": 6 },
      "direction": "none",
      "straight": false,
      "outMode": "destroy"
    }
  },
  "interactivity": {
    "events": {
      "onHover": {
        "enable": true,
        "mode": "trail"
      },
      "resize": true
    },
    "modes": {
      "trail": {
        "delay": 0.1,
        "quantity": 10,
        "pauseOnStop": true
      }
    }
  },
  "detectRetina": true,
  "background": {
    "color": "#000000",
    "image": "url('wallpaper.jpg')",
    "position": "50% 50%",
    "repeat": "no-repeat",
    "size": "cover"
  },
  "backgroundMask": {
    "enable": true,
    "cover": {
      "color": "#000000"
    }
  }
}
